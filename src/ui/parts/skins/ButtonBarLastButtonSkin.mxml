<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:c="ui.parts.components.*"
                   alpha.disabled="0.5"
                   creationComplete="onCreationComplete(event)"
                   stateChangeComplete="onStateChangeComplete(event)"
                   autoIconManagement="false">

    <fx:Metadata>
        <![CDATA[
        [HostComponent("spark.components.ButtonBarButton")]
        ]]>
    </fx:Metadata>

    <fx:Script><![CDATA[
        import global.Color;

        import mx.events.FlexEvent;

        private function onCreationComplete(event:FlexEvent):void
        {
            validateIconDisplay();
        }

        private function onStateChangeComplete(event:FlexEvent):void
        {
            validateIconDisplay();
        }

        private function validateIconDisplay():void
        {
            if (!iconDisplay)
                return;

            iconDisplay.width = 16;
            iconDisplay.height = 16;
        }
        ]]></fx:Script>

    <!-- States -->
    <s:states>
        <s:State name="up"/>
        <s:State name="over"
                 stateGroups="overStates"/>
        <s:State name="down"
                 stateGroups="downStates"/>
        <s:State name="disabled"
                 stateGroups="disabledStates"/>
        <s:State name="upAndSelected"
                 stateGroups="selectedStates, selectedUpStates"/>
        <s:State name="overAndSelected"
                 stateGroups="overStates, selectedStates"/>
        <s:State name="downAndSelected"
                 stateGroups="downStates, selectedStates"/>
        <s:State name="disabledAndSelected"
                 stateGroups="selectedUpStates, disabledStates, selectedStates"/>
    </s:states>

    <s:Group id="groupContent" width="100%">

        <s:Rect id="rect"
                width="100%"
                height="100%"
                bottomRightRadiusX="5"
                bottomRightRadiusY="5"
                topRightRadiusX="5"
                topRightRadiusY="5">
            <s:fill>
                <s:SolidColor color="{Color.fillMedium}"
                              alpha.up="1"
                              alpha.disabled=".5"/>
            </s:fill>
        </s:Rect>

        <s:Rect width="100%"
                height="100%"
                bottomRightRadiusX="5"
                bottomRightRadiusY="5"
                topRightRadiusX="5"
                topRightRadiusY="5">
            <s:fill>
                <s:SolidColor color="{Color.white}"
                              alpha=".05"
                              alpha.overStates=".1"
                              alpha.disabled="0"/>
            </s:fill>
        </s:Rect>

        <s:HGroup id="groupButton"
                  width="100%"
                  horizontalAlign="center"
                  padding="7"
                  verticalAlign="middle"
                  gap="7">

            <c:ColorBitmapImage id="iconDisplay"
                                includeInLayout="{iconDisplay.source}"
                                color="0x6d7173"
                                width="16"
                                height="16"
                                smooth="true"
                                alpha.up="1"
                                alpha.disabled=".5"/>

            <s:Label id="labelDisplay"
                     textDecoration="none"
                     textDecoration.selectedStates="underline"
                     styleName="button"
                     height="16"
                     verticalAlign="middle"
                     color="0x6d7173"
                     alpha.up="1"
                     alpha.disabled=".5"/>

        </s:HGroup>

    </s:Group>

</s:SparkButtonSkin>